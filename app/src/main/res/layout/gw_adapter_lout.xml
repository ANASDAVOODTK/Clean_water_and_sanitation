<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardht"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_weight="0.9"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/district"
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#087CD8"
                android:text="State : Kerala" />

            <TextView
                android:id="@+id/lsgd"
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0782E4"
                android:text="Year:2018"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.yangp.ypwaveview.YPWaveView
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:id="@+id/pd"
                app:animatorEnable="true"
                app:textHidden="false"
                app:shapeType="circle"
                app:frontColor="#0C7FDC"
                app:behideColor="#8CB1D6"
                app:borderColor="#68A1CF"
                app:borderWidthSize="4dp"
                app:textColor="#3F51B5"
                app:max="1000"
                app:progress="000"
                app:strong="90"
                app:shapePadding="1dp"/>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>